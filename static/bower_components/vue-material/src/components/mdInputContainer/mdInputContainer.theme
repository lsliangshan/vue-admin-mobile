.THEME_NAME {
  .md-input-container,
  &.md-input-container {
    &.md-input-invalid {
      &:after {
        background-color: #{'WARN-COLOR'};
      }

      label,
      .md-error,
      .md-count,
      input,
      textarea {
        color: #{'WARN-COLOR'};
      }
    }

    &.md-input-focused {
      &.md-input-inline {
        label {
          color: rgba(#000, .54);
        }
      }

      &.md-input-required {
        label:after {
          color: #{'WARN-COLOR'};
        }
      }

      &:after {
        height: 2px;
        background-color: #{'PRIMARY-COLOR'};
      }

      input,
      textarea {
        color: #{'PRIMARY-COLOR'};
        text-shadow: 0 0 0 #{'BACKGROUND-CONTRAST'};
        -webkit-text-fill-color: transparent;
      }

      label {
        color: #{'PRIMARY-COLOR'};
      }
    }
  }
}
